{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"checkJs": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@shared/*": ["shared/*"],
			"@lenses/*": ["lenses/*"]
		}
	},
	"include": ["src/**/*", "shared/**/*", "lenses/**/*"],
	"exclude": ["node_modules", "dist", "build"]
}
